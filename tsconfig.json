{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "isolatedModules": true,

        "forceConsistentCasingInFileNames": true,

        "strict": true,

        "skipLibCheck": true,

        "outDir": "dist",
        "declaration": true,

        "sourceMap": true
    },

    "include": ["packages"],
    "exclude": ["node_modules"]
}
